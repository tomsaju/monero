<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/no_items_layout_parent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/emptybox"
        android:id="@+id/empty_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_image"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:id="@+id/empty_label"
        android:textSize="20sp"
        android:text="Its empty here"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/empty_subtitle"
        android:text="Add an activity to get started"/>
    </RelativeLayout>
</RelativeLayout>