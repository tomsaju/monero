<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:contactsView="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaedf2"
    android:orientation="vertical">

    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:id="@+id/contacs_searchView"
        android:background="@android:color/white"
        app:queryBackground="@color/white_transparency"
        app:queryHint="Type name,number or email" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:id="@+id/horizontal_scrollview"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal_list"
            android:orientation="horizontal">



        </LinearLayout>


    </HorizontalScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:id="@+id/contacts_header"
            android:background="#ced6e5"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:text="Refresh"
            android:id="@+id/refresh_contact_list"
            android:textColor="#80000000"
            android:layout_marginRight="18dp"/>
    <ListView
        android:id="@+id/all_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contacts_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_above="@+id/proceed_button_parent_contacts"
        tools:listitem="@layout/activities_list_item"
        android:minHeight="40dp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/proceed_button_parent_contacts"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/cancel_action_select_contacts"
            android:text="  Back"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:id="@+id/done_action_select_contacts"
            android:text="Done  "/>

    </LinearLayout>

    </RelativeLayout>

</LinearLayout>