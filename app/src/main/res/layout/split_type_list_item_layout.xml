<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/splt_type_list_item_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardBackgroundColor="#ffffff"
    cardview:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="@null"
            android:id="@+id/check_split_type"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/amount_textview_expense_list_item"
            android:layout_toRightOf="@id/check_split_type"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tony Stark"
                android:id="@+id/expense_title_list_item"
                android:textSize="20sp"
                android:maxLines="1"
                android:textColor="#000000"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="33.3%"
            android:id="@+id/amount_textview_expense_list_item"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:textSize="20sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>