<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/mainListItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card_parent_activities_list_item">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"></View>
            <TextView
                android:id="@+id/activites_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Trip to nevada"
                android:textColor="#CC000000"
                android:textStyle="normal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 9"
                android:id="@+id/created_date"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:layout_alignBottom="@id/activites_title"/>
            <TextView
                android:id="@+id/activities_users_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/activites_title"
                android:layout_below="@+id/activites_title"
                android:text="John,Alan and 3 others"
                android:alpha="0.6"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tag_group"
                android:layout_below="@id/activities_users_names"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                style="@style/TagGroup.Small.Custom" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>