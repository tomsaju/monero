<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_expense_parent"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total expense"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:alpha="0.6"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="40sp"
                    tools:text="$3208.56"
                    android:id="@+id/amount_text"
                    android:textColor="#000000"/>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="#58C7C9"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="2dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#B71C1C"
            android:text="you owe"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="$319.00"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textSize="22sp"/>
    </android.support.v7.widget.CardView>

<View
    android:layout_width="2dp"
    android:layout_height="50dp"
    android:layout_margin="20dp"
    android:background="@android:color/darker_gray"></View>
     <android.support.v7.widget.CardView
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_margin="20dp"
         app:cardCornerRadius="8dp"
         app:cardBackgroundColor="#ffffff"
         android:layout_weight="1">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:textColor="#33691E"
             android:text="they owe"
             android:textAllCaps="true"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             tools:text="$1240.00"
             android:layout_marginTop="8dp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:textColor="#000000"
             android:textSize="22sp"/>
     </android.support.v7.widget.CardView>
    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_list"></android.support.v7.widget.RecyclerView>

</LinearLayout>

</android.support.v4.widget.NestedScrollView>