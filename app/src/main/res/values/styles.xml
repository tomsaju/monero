<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="MyAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="HeaderBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    app:atg_backgroundColor="#fafafa"
    app:atg_textColor="#818181"
    <style name="TagGroup.Small.Custom" parent="TagGroup">
        <item name="atg_textSize">10sp</item>
        <item name="atg_horizontalSpacing">6dp</item>
        <item name="atg_verticalSpacing">3dp</item>
        <item name="atg_horizontalPadding">8dp</item>
        <item name="atg_verticalPadding">2dp</item>
        <item name="atg_textColor">#7b7b7b</item>
        <item name="atg_backgroundColor">#e0e0e0</item>
        <item name="atg_borderColor">#e0e0e0</item>
    </style>
</resources>
